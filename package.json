{
  "name": "protestant-bot",
  "version": "1.0.0",
  "description": "Bot to reply and retweet all about Martin Luther and Protestant Reform in Twitter.",
  "keywords": [],
  "homepage": "https://protestantbot.leocarvalho.dev",
  "repository": {
    "type": "GitHub",
    "url": "https://github.com/carvalholeo/protestant-bot"
  },
  "license": "MIT",
  "author": {
    "name": "LÃ©o Carvalho",
    "email": "leo@leocarvalho.dev",
    "url": "https://leocarvalho.dev"
  },
  "main": "./dist/src/index.js",
  "scripts": {
    "build": "npx tsc --build tsconfig.json && npx cpy-cli ./src/views/* dist --dot --parents",
    "postbuild": "npx sequelize-cli db:migrate",
    "dev": "tsnd ./src/server.ts --rs",
    "preinstall": "npx npm-force-resolutions",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "start": "node ./dist/src/server.js --use-strict",
    "test": "jest"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "prettier": {
    "bracketSpacing": true,
    "endOfLine": "lf",
    "printWidth": 80,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "security-node",
      "@typescript-eslint",
      "sonarjs",
      "promise",
      "import"
    ],
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:security-node/recommended"
    ],
    "rules": {
      "max-len": [
        "error",
        {
          "code": 120,
          "ignoreComments": true,
          "ignoreTrailingComments": true,
          "ignoreUrls": true,
          "ignoreTemplateLiterals": true
        }
      ]
    }
  },
  "resolutions": {
    "js-beautify": "1.14.3",
    "minimist": "1.2.6"
  },
  "dependencies": {
    "axios": "^0.26.0",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.7",
    "express": "^4.17.3",
    "express-limit-bouncer": "^1.0.3",
    "express-validator": "^6.14.0",
    "helmet": "^5.0.2",
    "hpp": "^0.2.3",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "mariadb": "^3.0.0",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.2",
    "rotating-file-stream": "^3.0.3",
    "sequelize": "^6.17.0",
    "twitter-lite": "^1.1.0",
    "twitter-v2": "https://github.com/gardentree/twitter-v2.git",
    "uuid": "^8.3.2",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.6.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/csurf": "^1.11.2",
    "@types/ejs": "^3.1.0",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^27.5.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/morgan-json": "^1.1.0",
    "@types/node": "^16.11.26",
    "@types/nodemailer": "^6.4.4",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "cpy-cli": "^4.0.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security-node": "^1.1.1",
    "eslint-plugin-sonarjs": "^0.12.0",
    "husky": "^7.0.4",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "node-notifier": "^10.0.1",
    "nodemon": "^2.0.15",
    "prettier": "2.6.2",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=15.x",
    "npm": ">=7.x"
  },
  "engineStrict": true
}
